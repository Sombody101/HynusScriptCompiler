###
#   Console manipulation
###

fun console.write     line -> hscript::void::System.Console.Write     line
fun console.writeLine line -> hscript::void::System.Console.WriteLine line
fun console.beep      freq -> hscript::void::System.Console.Beep      freq

###
#   Numberic conversions
###

fun sbyte  str -> hscript::SByte::System.Convert.ToSByte   str
fun short  str -> hscript::Int16::System.Convert.ToInt16   str
fun int    str -> hscript::Int32::System.Convert.ToInt32   str
fun long   str -> hscript::Int64::System.Convert.ToInt64   str
fun byte   str -> hscript::Byte::System.Convert.ToByte     str
fun ushort str -> hscript::UInt16::System.Convert.ToUInt16 str
fun uint   str -> hscript::UInt32::System.Convert.ToUInt32 str
fun ulong  str -> hscript::UInt64::System.Convert.ToUInt64 str

###
#   String conversion
###

fun string obj -> hscript::String::System.Convert.ToString obj
fun string.format str, form -> hscript::String::System.String.Format str, form

# fun length obj -> hscript::Object::System.

###
#   Threading
###

fun delay ms -> hscript::void::System.Threadding.Tasks.Delay ms

